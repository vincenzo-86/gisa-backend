# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gisa_db
DB_USER=gisa_user
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# GEOCALL Integration
GEOCALL_API_URL=https://geocall.example.com/api
GEOCALL_API_KEY=your_geocall_api_key
GEOCALL_API_SECRET=your_geocall_api_secret
GEOCALL_SYNC_INTERVAL=30000

# GPS Tracking
GPS_UPDATE_INTERVAL_MOVING=30
GPS_UPDATE_INTERVAL_STOPPED=300
GPS_RETENTION_DAYS=365

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@gisa.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=G.I.S.A. System <noreply@gisa.com>

# Redis Configuration (optional for caching and real-time)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Emergency Protocol
EMERGENCY_ALERT_PHONE=+393331234567
EMERGENCY_ALERT_EMAIL=emergency@gisa.com

# Warehouse Forecasting
FORECAST_HORIZON_DAYS=90
FORECAST_MODEL=arima

# Maps API
MAPS_API_KEY=your_maps_api_key
MAPS_PROVIDER=openstreetmap

# Notification
PUSH_NOTIFICATION_ENABLED=true
PUSH_NOTIFICATION_KEY=your_fcm_key
